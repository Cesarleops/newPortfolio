---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";

const {id, title, pictures} = Astro.props


---

<Layout title="Cesar Leyton">
  <section class="h-fit  relative w-[95%] rounded-md flex flex-col">
    <Image src={pictures[0]} alt={'project image'} width={200} height={200} style=`view-transition-name:image-${id}` class="object-cover w-full max-h-full"/>
    <aside style=`view-transition-name:text-${id}`  class="bg-gradient-to-r from-[#00c6ff] to-[#0072ff] w-full h-10 flex 
    justify-start items-center gap-2 absolute bottom-0 z-20 text-white">
      <h4 class="pl-4 text-secondary text-lg">{title}</h4>
      <a class="text-secondary text-lg" href={`/${id}`}>GO</a>
    </aside>
  </section>
  
</Layout>


